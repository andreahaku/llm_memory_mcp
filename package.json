{
  "name": "llm-memory-mcp",
  "version": "1.0.0",
  "description": "Persistent memory MCP server for LLM tools with project-specific and global storage",
  "main": "dist/src/index.js",
  "bin": {
    "llm-memory-mcp": "dist/src/index.js",
    "llm-memory-migrate": "dist/src/cli/migration-cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/src/index.js",
    "test": "jest",
    "test:all": "node tests/test-all-tools.js",
    "test:frame-indexing": "tsx test/frame-indexing-validation.ts",
    "simulate:user": "node scripts/simulate-user-flow.js",
    "benchmark": "tsx benchmarks/comprehensive-benchmark.ts",
    "benchmark:fast": "tsx benchmarks/comprehensive-benchmark.ts --iterations 3 --single-encoder",
    "benchmark:full": "tsx benchmarks/comprehensive-benchmark.ts --iterations 20",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "preinstall": "npx only-allow pnpm",
    "migrate:storage": "tsx src/cli/migration-cli.ts storage",
    "migrate:scope": "tsx src/cli/migration-cli.ts scope",
    "migrate:status": "tsx src/cli/migration-cli.ts status",
    "migrate:validate": "tsx src/cli/migration-cli.ts validate"
  },
  "packageManager": "pnpm@9.9.0",
  "keywords": [
    "mcp",
    "memory",
    "llm",
    "persistence",
    "claude",
    "cursor",
    "codex"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.10",
    "@ffmpeg/util": "^0.12.2",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "qrcode-generator": "^2.0.4",
    "uuid": "^9.0.1",
    "zlib": "^1.0.5",
    "zxing-wasm": "^2.2.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
